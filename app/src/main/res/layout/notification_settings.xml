                    android:text="@string/noti_delete"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_13"
                    android:textFontWeight="300"
                    android:textColor="@color/subfont"
                    android:text="@string/noti_delete_content"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="?android:attr/listDivider" />
        <LinearLayout
            android:background="?attr/listChoiceBackgroundIndicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/gap_5sp"
            android:paddingTop="@dimen/gap_10sp"
            android:paddingBottom="@dimen/gap_10sp">
            <LinearLayout
                android:background="?attr/listChoiceBackgroundIndicator"
                android:layout_weight="1"
                android:layout_width="@dimen/gap_0sp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/gap_30sp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_16"
                    android:textFontWeight="600"
                    android:textColor="@color/black"
                    android:text="@string/noti_lock"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_13"
                    android:textFontWeight="300"
                    android:textColor="@color/subfont"
                    android:text="@string/noti_lock_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <!-- Rest of your layout -->

</RelativeLayout>