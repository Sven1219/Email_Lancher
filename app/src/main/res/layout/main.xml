<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg_pic"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_mask_effect" />
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/appSearch"
                android:background="@drawable/bg_rounded_searchapp"
                android:backgroundTint="@color/white"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                xmlns:tools="http://schemas.android.com/tools"
                >
                <ImageView
                    android:id="@+id/googleicon"
                    android:padding="10dp"
                    android:src="@drawable/google_icon"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:id="@+id/audioicon"
                    android:padding="10dp"
                    android:src="@drawable/audioicon"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/captureicon"/>
                <ImageView
                    android:id="@+id/captureicon"
                    android:padding="10dp"
                    android:src="@drawable/cameraicon"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true"
                    android:weightSum="4">

                    <ImageView
                        android:id="@+id/selficon"
                        android:src="@drawable/selficon"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_alignParentBottom="true"
                        android:padding="10dp"/>

                    <ImageView
                        android:id="@+id/phoneicon"
                        android:src="@drawable/call"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_alignParentBottom="true"
                        android:padding="10dp"/>

                    <ImageView
                        android:id="@+id/messageicon"
                        android:src="@drawable/message"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_alignParentBottom="true"
                        android:padding="10dp"/>

                    <ImageView
                        android:id="@+id/cameraicon"
                        android:src="@drawable/camera"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_alignParentBottom="true"
                        android:padding="10dp"/>

                </LinearLayout>
            </RelativeLayout>

        </FrameLayout>
    </LinearLayout>
</RelativeLayout>
