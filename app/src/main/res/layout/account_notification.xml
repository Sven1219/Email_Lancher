                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/grey"
                android:src="@drawable/collapseicon" />
        </RelativeLayout>
